= form_for(@post) do |f|
  .field
    .field-label
      = f.label :title, "snowB"
    .field-input
      = f.text_field :title
  .field
    .field-label
      = f.label :body, "ココがポイント!"
    .field-input
      = f.text_area :body
  .field
    .field-label
      = f.label :image, "snowB写真"
    .field-input
      = f.attachment_field :image
  .field
    .field-label
      = f.label :category, "カテゴリーを選択してください"
    .field-input
      = f.select :category_id, options_for_select(@category_parent_array.map{|c| [c[:name], c[:id]]}), {include_blank: "選択してください"}, {class: "parant_category_box", id: "parent_category"}
  .actions
    = f.submit "投稿する", class: "btn"