= form_for(@post, local:true) do |f|
  .field
    .field-label
      = f.label :title, "snowB"
    .field-input
      = f.text_field :title
  .field
    .field-label
      = f.label :body, "ココがポイント!"
    .field-input
      = f.text_area :body
  .field
    .field-label
      = f.label :image, "snowB写真"
    .field-input
      = f.attachment_field :image
  .field
    .field-label
      = f.label :category_id, "カテゴリーを選択してください"
    .field-input
      = f.collection_select :category_id, @category_parent, :id, :name, { prompt: '選択してください' }, {id: 'parent_category'}
  .actions
    = f.submit "投稿する", class: "btn"