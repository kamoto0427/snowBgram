- if @user.errors.any?
  .alert
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message

#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "マイページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(@user) do |f|
        .field
          .field-label
            = f.label :name, "ユーザー名"
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :profile, "プロフィール"
          .field-input
            = f.text_area :profile
        .field
          .field-label
            = f.label :profile_image, "プロフィール写真"
          .field-input
            = f.attachment_field :profile_image
        .actions
          = f.submit "更新", class: 'btn'
