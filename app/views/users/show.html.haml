.show-title
  %h1 マイページ

.show-image
  = attachment_image_tag @user, :profile_image, fallback: "no-image.png", size: "190x260"

.show-username
  = @user.name

- if @user.id == current_user.id
  .show-email
    = @user.email
  .edit-email-btn
    = link_to "編集", edit_user_path(@user)

.show-profile
  = @user.profile